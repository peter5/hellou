<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/dialog"
    android:background="#ffffff" 
    android:layout_margin="0dp"
    android:padding="0dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_margin="0dp" android:padding="0dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="服务器地址：" />
		<EditText android:id="@+id/serverIP" android:layout_width="200dp" android:layout_height="wrap_content" />
    </LinearLayout>
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_margin="0dp" android:padding="0dp">
	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="服务器端口：" />
		<EditText android:id="@+id/serverPort" android:layout_width="200dp" android:layout_height="wrap_content" />
	</LinearLayout>
	　　

</LinearLayout>